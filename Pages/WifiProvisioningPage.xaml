<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="BleScannerMaui.Pages.WifiProvisioningPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wi‑Fi Provisioning">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Enter Wi‑Fi credentials" FontAttributes="Bold" />

            <VerticalStackLayout>
                <Label Text="SSID" />
                <Entry x:Name="SsidEntry" Placeholder="Network SSID" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Password" />
                <Entry x:Name="PasswordEntry" Placeholder="Network password" IsPassword="True" />
            </VerticalStackLayout>

            <Button Text="Save" Clicked="OnSaveClicked" />

            <Label x:Name="StatusLabel" Text="" LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
